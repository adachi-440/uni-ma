.container
  %h2 Log in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email", class: 'form-control' }
      = f.input :password,
        required: false,
        input_html: { autocomplete: "current-password", class: 'form-control' }
      .custom-control.custom-checkbox.ml-10
        = f.input :remember_me, as: :boolean, input_html: { class: 'custom-control-input' } if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "ログイン", input_html: { class: 'btn btn-primary'}
  = render "users/shared/links"
